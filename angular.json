{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "app-shell",
  "schematics": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    },
    "@nrwl/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "babel": true
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "eslint"
      }
    }
  },
  "projects": {
    "app-shell": {
      "projectType": "application",
      "root": "apps/app-shell",
      "sourceRoot": "apps/app-shell/src",
      "prefix": "nx-microfrontends",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/apps/app-shell",
            "index": "apps/app-shell/src/index.html",
            "main": "apps/app-shell/src/main.ts",
            "polyfills": "apps/app-shell/src/polyfills.ts",
            "tsConfig": "apps/app-shell/tsconfig.app.json",
            "aot": true,

            "assets": [
              "apps/app-shell/src/favicon.ico",
              "apps/app-shell/src/assets"
            ],
            "styles": ["apps/app-shell/src/styles.scss"],
            "scripts": [],
            "customWebpackConfig": {
              "path": "./apps/app-shell/webpack.config.js",
              "mergeRules": {
                "externals": "replace"
              }
            }
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/app-shell/src/environments/environment.ts",
                  "with": "apps/app-shell/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "customWebpackConfig": {
                "path": "./apps/app-shell/webpack.prod.config.js"
              }
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "app-shell:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "app-shell:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "app-shell:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/app-shell/src/**/*.ts",
              "apps/app-shell/src/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/app-shell"],
          "options": {
            "jestConfig": "apps/app-shell/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
